# Server / OAuth
GITHUB_CLIENT_ID=your_github_app_client_id
GITHUB_CLIENT_SECRET=your_github_app_client_secret
GITHUB_OAUTH_REDIRECT=http://localhost:3000/api/auth/github/callback
AUTH_SECRET=generate_a_strong_random_secret

# GitHub repo info for PR/workflow actions
GITHUB_OWNER=giuseppe-moffa
GITHUB_REPO=TfPilot
GITHUB_PLAN_WORKFLOW=plan.yml
GITHUB_APPLY_WORKFLOW=apply.yml
GITHUB_DESTROY_WORKFLOW=destroy.yml
GITHUB_CLEANUP_WORKFLOW_FILE=cleanup.yml

# OpenAI (if using infra assistant)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# AWS / TfPilot storage
TFPILOT_DEFAULT_REGION=eu-west-2
TFPILOT_REQUESTS_BUCKET=tfpilot-requests
TFPILOT_CHAT_LOGS_BUCKET=tfpilot-chat-logs
# Comma-separated GitHub logins allowed to deploy to prod
TFPILOT_PROD_ALLOWED_USERS=giuseppe-moffa,cyrax2k21
# Comma-separated GitHub logins allowed to destroy prod resources (separate from general prod access)
TFPILOT_DESTROY_PROD_ALLOWED_USERS=giuseppe-moffa
# RBAC (comma-separated GitHub usernames)
TFPILOT_ADMINS=giuseppe-moffa
TFPILOT_APPROVERS=giuseppe-moffa,cyrax2k21
# Policy allowlist (optional)
TFPILOT_ALLOWED_REGIONS=eu-west-2,us-east-1
# Admin email notifications (comma-separated email addresses)
TFPILOT_ADMIN_EMAILS=admin1@example.com,admin2@example.com
# Email sender address (must be verified in AWS SES)
TFPILOT_EMAIL_FROM=noreply@yourdomain.com

# Next.js
NODE_ENV=development
